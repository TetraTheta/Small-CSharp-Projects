root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
tab_width = 2
trim_trailing_whitespace = true
max_line_length = 200

[*.{bat,cmd}]
end_of_line = crlf

[*.go]
indent_style = tab

[*.rs]
end_of_line = lf

[*.{toml,yaml,yml}]
end_of_line = lf
